<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient5"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/logo" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageView2"
        android:fontFamily="@font/poppins_bold"
        android:gravity="center"
        android:text="Welcome"
        android:textColor="#F1EAEA"
        android:textSize="34sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView"
        android:layout_margin="10dp"
        android:fontFamily="@font/poppins_medium"
        android:gravity="center"
        android:text="Sign in to continue"
        android:textColor="#E4BFBF"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editTextTextPersonName2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView2"
        android:layout_margin="10dp"
        android:background="@drawable/edit_text_border"

        android:backgroundTint="@color/white"
        android:drawableLeft="@drawable/ic_baseline_email_24"
        android:drawablePadding="5dp"
        android:ems="10"
        android:fontFamily="@font/poppins_medium"
        android:hint="Email or Phone"
        android:inputType="textPersonName"
        android:padding="10dp"
        android:paddingHorizontal="10dp" />

    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextTextPersonName2"
        android:layout_marginStart="10dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/edit_text_border"
        android:backgroundTint="@color/white"
        android:drawableStart="@drawable/ic_baseline_lock_open_24"
        android:drawablePadding="5dp"
        android:ems="15"
        android:fontFamily="@font/poppins_medium"
        android:hint="Enter your Password"
        android:inputType="textPassword"
        android:padding="10dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_below="@+id/login"
        android:layout_marginBottom="16dp"
        android:fontFamily="@font/poppins_medium"
        android:onClick="forgetPassword"
        android:text="Forgot Password?"
        android:textColor="#E6DCDC"
        android:textSize="16sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/login"
        android:layout_width="match_parent"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="80dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/password"
        android:background="@drawable/button"
        android:backgroundTint="@color/white"
        android:gravity="center"
        android:hint="login"
        android:onClick="logIn"
        android:text="login"
        android:textColor="@color/black"
        android:textColorHighlight="#E2D5D5" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView3"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:fontFamily="@font/poppins_medium"
        android:text="Don't have account ?"
        android:textColor="#F6F0F0"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView4"
        android:gravity="center"
        android:fontFamily="@font/poppins_medium"
        android:onClick="roleOpen"
        android:text="Sign Up"
        android:textColor="#EBC7CF"
        android:textSize="20sp"
        android:textStyle="bold" />
</RelativeLayout>